
@model websitecsharp.shared.viewmodels.UpdateUserViewModel

<script src="~/Scripts/dmacc/student.js" type="text/javascript" ></script>

<h2> Search Person</h2>
<div class="row">

    <div class="col-md-3">
        <label>Search Name</label>
    </div>
    <div class="col-md-7">
        <input id="searchString" type="text" class="form-control" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-dark" onclick="Search()">Search</button> 
    </div>
          
</div>

<br />


<h2> Update Person</h2>

<div id="successmessage" class="hidden alert alert-success">
    Successfully Updated!
</div>
<div id="errormessage" class="hidden alert alert-danger" >
    Error Occured!
</div> 

<input id="personId" type="hidden"/>
<div class="col-md-12">
    <div class="col-md-6">
        <label> First Name:</label>
    </div>
    <div class="col-md-6">
        <input id="firstname" type="text" class="form-control" required/>
    </div>
 </div>

<div class="col-md-12">
    <div class="col-md-6">
        <label> Last Name:</label>
    </div>
    <div class="col-md-6">
        <input id="lastname" type="text" class="form-control" required />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label> Gender:</label>
    </div>
    <div class="col-md-6">
        <input id="gender" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label> E-Mail:</label>
    </div>
    <div class="col-md-6">
        <input id="email" type="email" class="form-control" required/>
    </div>
</div>
 <div class="col-md-12">
    <div class="col-md-6">
        <label>Phone Number:</label>
    </div>
    <div class="col-md-6">
        <input id="phonenumber" type="text" class="form-control" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"/>
     </div>
  </div>

<br/>

<div class="col-md-12">
    <button class="btn btn-secondary" onclick="updatePerson()"> Save</button> 
</div>